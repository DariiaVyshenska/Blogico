<% if params[:query] %>
  <% if @results.empty? %>
    <p>Sorry, no matches were found.</p>
  <% else %>
    <h3>Reslts for '<%= params[:query] %>':</h3>
    <% @results.each do |post| %>
    <div>
      <br>
      <a style="text-decoration:none;color:black" href="/posts/<%= post[:id] %>">
        <h3><%= post[:header] %></h3>
        <% if TEXT_SECTIONS.include?(post[:category]) %>
          <%= post_body_preview(post[:body]) %>
        <% else %>
          <%== post[:body] %>
        <% end %>
        <p><em>Date: </em> <%= post[:date] %><p>
      </a>
      <% unless post[:tags].empty? %>
        <p><em>Tags: </em> <%= tags_to_str(post) %><p>
      <% end %>
    </div>
    <% end %>
  <% end %>
<% end %>
