<p style="text-align:center;">
  <% if @page_id > 0 %>
    <a href="/<%= section %>/<%= params[:tag_id] && "tags/#{params[:tag_id]}/" %><%= @page_id - 1 %>"><</a>
  <% end %>
  Page <%= @page_id + 1 %>
  <% if @page_id < @max_page_num - 1 %>
    <a href="/<%= section %>/<%= params[:tag_id] && "tags/#{params[:tag_id]}/" %><%= @page_id + 1 %>">></a>
  <% end %>
</p>
