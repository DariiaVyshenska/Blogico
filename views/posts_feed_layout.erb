<div>
  <% unless @tags_info.empty? %>
    <p>
      Filters:
      <% @tags_info.each do |tag| %>
        <a href="/<%= section %>/tags/<%= tag[:id] %>/0"><%= tag[:name] %></a>&nbsp;&nbsp;
      <% end %>
    </p>
  <% end %>
</div>

<%== yield %>

<br>
