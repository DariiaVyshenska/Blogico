<!doctype html>
<html lang="en-US">
  <head>
    <title>Odarka Bila</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=PT+Sans">
  </head>
  <body>
    <% if session[:success] %>
      <div>
        <p><%= session.delete(:success) %></p>
      </div>
    <% end %>
    <% if session[:error] %>
      <div>
        <p><%= session.delete(:error) %></p>
      </div>
    <% end %>
    <main>
      <p>
        <% if logged_in? %>
          <div style="text-align:right;">
            <form method='post' action='/signout'>
              <em>Signed in with email: <%= session[:email] %></em> (<a href="/change_password">Change Password</a>)
              <button type="submit">Sign Out</button>
            </form>
          </div>

        <% else %>
          <p style="text-align:right;"><a href="/signin">Sign In</a></p>
        <% end %>
        <a href="/">Main</a>&nbsp;&nbsp;
        <a href="/visualart">Visual Art</a>&nbsp;&nbsp;
        <a href="/blog_posts/0">Writings</a>&nbsp;&nbsp;
        <a href="/software_projects/0">Software Projects</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        </p>
        <p>
        <form action="/search" method="GET">
          <input name="query" id="query" value="<%= params[:query] %>">
          <button type="submit">Search Website</button>
        </form>
      </p>
      <% if logged_in? %>
        <a href="/new">Create New Post</a>
        <br>
        <br>
      <% end %>
      <%== yield %>
    </main>
  </body>
</html>
